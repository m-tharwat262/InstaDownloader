<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="156dp"
    android:layout_height="116dp"
    android:background="@color/white">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_saved_post_media_image"
        android:layout_width="156dp"
        android:layout_height="116dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="5dp"
        app:riv_border_width="1dp"
        app:riv_border_color="@color/primary_color"
        tools:src="@drawable/splash_background_image" />


    <ImageView
        android:id="@+id/item_saved_post_media_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        tools:src="@drawable/media_type_video"/>


    <!-- important to make the CircleImageView inside the LinearLayout because a problem in direction when run the application -->
    <LinearLayout
        android:layout_width="156dp"
        android:layout_height="116dp"
        android:gravity="bottom|end">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_saved_post_user_profile_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:civ_border_width="1dp"
            app:civ_circle_background_color="@color/white"
            app:civ_border_color="@color/secondary_color"
            tools:src="@drawable/splash_background_image" />

    </LinearLayout>



</RelativeLayout>