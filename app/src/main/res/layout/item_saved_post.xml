<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="116dp"
    tools:layout_width="156dp">



    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_saved_post_media_image"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="5dp"
        app:riv_border_width="1dp"
        app:riv_border_color="@color/primary_color"
        tools:src="@drawable/splash_background_image"/>


    <ImageView
        android:id="@+id/item_saved_post_media_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        tools:src="@drawable/media_type_video" />


    <View
        android:id="@+id/item_saved_post_media_image_shadow"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="@drawable/item_saved_post_shadow"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/item_saved_post_check_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/check_circle_icon"
        android:visibility="gone"
        tools:visibility="visible" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_saved_post_user_profile_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        app:civ_border_width="1dp"
        app:civ_circle_background_color="@color/white"
        app:civ_border_color="@color/secondary_color"
        tools:src="@drawable/splash_background_image" />



</RelativeLayout>