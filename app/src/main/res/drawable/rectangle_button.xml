<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_pink_color">
    <item>
        <shape
            android:shape="rectangle" >


            <size
                android:height="10dp"
                android:width="10dp"/>

            <solid
                android:color="@android:color/transparent"/>

            <corners
                android:radius="6dp" />

            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp"/>


        </shape>
    </item>

    <!-- Make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />

            <size
                android:height="10dp"
                android:width="10dp"/>

            <corners
                android:radius="6dp" />

        </shape>

    </item>

</ripple>